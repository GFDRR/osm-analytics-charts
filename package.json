{
  "name": "openDRI",
  "scripts": {
    "start": "echo 'call \"npm run server\" for development or \"npm run build\" for production'",
    "server": "webpack-dev-server --progress --colors --config ./config/webpack.config-dev",
    "precommit": "lint-staged",
    "build": "NODE_ENV=production && webpack --config ./config/webpack.config-prod",
    "publish": "cp -rf ./public/ ../opendri-charts-gh-pages",
    "publish-wp": "npm run build && cp ./public/bundle.js ../opendri-website/wp-content/plugins/opendri-charts/scripts",
    "publish-wp:watch": "onchange 'src/**/*.*' -- npm run publish-wp"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "autoprefixer-core": "^6.0.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-preact": "^1.1.0",
    "babel-preset-stage-0": "^6.24.1",
    "component-directory-webpack-plugin": "^1.0.5",
    "css-loader": "^0.28.4",
    "eslint": "^4.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.15.3",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.28.0",
    "html-webpack-template": "^6.0.1",
    "husky": "^0.13.4",
    "lint-staged": "^4.0.0",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.4.4",
    "react": "^15.6.1",
    "sass-loader": "^6.0.6",
    "sass-variable-loader": "^0.1.2",
    "style-loader": "^0.18.2",
    "stylelint": "^7.11.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "d3-scale": "^1.0.6",
    "es6-promise": "^4.1.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "polished": "^1.2.0",
    "preact": "^8.1.0"
  }
}
